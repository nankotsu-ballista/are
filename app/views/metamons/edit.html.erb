 <h1>メタの説明</h1> 

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_with(model: @metaedy, local: true) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :setumei %>
      <%= f.text_area :setumei,rows:5%><br>

      <%= f.label :gamename %>
      <%= f.text_field :gamename %><br>

      <%= f.label :image %>
      <%= f.file_field :image %>



     <%= f.submit "Update Meta", class: "btn btn-primary" %>
  <% end %>
</div>
<%=@metaedy%>
</div>