<link href="https://fonts.googleapis.com/css2?family=M+PLUS+1p&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'M PLUS 1p', sans-serif;
      font-weight: bold;
    }

    p, a ,h1{
      font-family: 'M PLUS 1p', sans-serif;
      font-weight: bold;
    }
  .link-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .link-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: calc(50% - 20px);
    height: 200px;
    border: 1px solid black;
    margin-bottom: 10px;
    margin-left: 10px;
    margin-right: 10px;
    background-size: contain;
    background-position: center;
    position: relative;
  }
  .link-box a {
    color: white;
    font-size: 20px;
    position: absolute;
  }
  .search-form {
    background-color: #666;
    border-radius: 25px;
    padding: 10px;
    display: flex;
    align-items: center;
  }
  .search-form label {
    margin-right: 10px;
  }
  .search-form input[type="text"] {
    border: none;
    background-color: transparent;
    flex-grow: 1;
    border-radius: 15px;
  }
  li {
    list-style-type: none;
  }
  /* 既存のスタイル定義はそのままにします */

  .user-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }
  .user-image-or-name {
    width: 100px;
    height: 100px;
    border: none;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
  }
  .user-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: none;
    background-color: white;
    border: 3px solid #808080;
    border-radius: 10px;
  background-color: #f2f2f2;
  margin-left: 30px;
  }
  .user-item a {
    color: white;
    font-size: 24px;
  }
</style>
</head>
<li>
<%= search_form_for @q, html: { class: 'search-form' } do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.submit "検索" %>
<% end %>
<% @users.each do |scoret| %>
  <div class="user-item">
    <div class="user-image-or-name">
      <% if scoret.image.present? %>
        <%= image_tag scoret.image, class: 'user-image' %>
      <% else %>
        <%= image_tag '人物の無料素材.png', class: 'user-image' %>
      <% end %>
    </div>
    <%= link_to scoret.name, scoret %>
  </div>
  <hr>
<% end %>
</li>