<style>
  .link-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .link-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: calc(50% - 20px);
    height: 200px;
    border: 1px solid black;
    margin-bottom: 10px;
    margin-left: 10px;
    margin-right: 10px;
    background-size: contain;
    background-position: center;
    position: relative;
  }
  .link-box a {
    color: white;
    font-size: 20px;
    position: absolute;
  }
  .search-form {
    background-color: #666;
    border-radius: 25px;
    padding: 10px;
    display: flex;
    align-items: center;
  }
  .search-form label {
    margin-right: 10px;
  }
  .search-form input[type="text"] {
    border: none;
    background-color: transparent;
    flex-grow: 1;
    border-radius: 15px;
  }
  li {
    list-style-type: none;
  }
  /* 既存のスタイル定義はそのままにします */

  .user-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }
  .user-image-or-name {
    width: 100px;
    height: 100px;
    border: 1px solid black;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
  }
  .user-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .user-item a {
    color: white;
    font-size: 24px;
  }
</style>

<li>
<%= search_form_for @q, html: { class: 'search-form' } do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.submit "検索" %>
<% end %>
<% @users.each do |scoret| %>
  <div class="user-item">
    <div class="user-image-or-name">
      <% if scoret.image.present? %>
        <%= image_tag scoret.image, class: 'user-image' %>
      <% else %>
        <%= scoret.name %>
      <% end %>
    </div>
    <%= link_to scoret.name, scoret %>
  </div>
<% end %>
</li>